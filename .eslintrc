{
  "extends": [
    "eslint-config-poetez/typescript",
    "eslint-config-prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "@typescript-eslint/no-unnecessary-condition": [
      "error",
      {"ignoreRhs": true}
    ],
    "@typescript-eslint/no-require-imports": "off"
  }
}
